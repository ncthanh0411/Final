<div class="col-lg-9">
    <div class="blog-sec right-pading">
            <div class="blog-sec right-pading">
                <div class="post-filter-sec">
                    <form method="post" class="filter-form">
                        <input type="post" placeholder="Search post">
                        <button><i class="ti-search"></i></button>
                    </form>
                    <div class="container">
                        <form>
                            <div class="form-group">
                                <select style="width: 100%;" name="states[]">
                                    <option>All Department</option>
                                    {{#each departlst}}
                                        <option value="{{id}}">{{departmentName}}</option>
                                    {{/each}}
                                </select>
                                <button type="button" onclick="#" class="btn btn-outline-info"><i class="ti-filter"></i></i>
                                    Filter</button>
                            </div>

                        </form>
                    </div>
                    {{#each depost_list}}
                    <div class="l-post">
                        <figure>
                            <img src="/images/bloglist-1.jpg" alt="">
                        </figure>
                        <div class="l-post-meta">
                            <h4><a href="/detail/{{id}}" title="">{{{title}}}</a></h4>
                            <div class="l-post-ranking">
                                <a class="admin" href="#" title="">{{department.departmentName}}</a>
                                <a class="pdate" href="#" title="">{{create_date}}</a>
                            </div>
                        </div>
                    </div>
                        <div value="{{id}}"></div>
                    {{/each}}

                </div>
                <!-- pagination -->
                <div class="pagination">
                    <a href="/depost/page/1">&laquo;</a>
                    {{#each pagearray}}
                        {{#ifEquals ../current this }}
                            <a href="#" class="active">
                        {{else}}
                            <a href="/depost/page/{{this}}">
                        {{/ifEquals}}

                        {{this}}</a>
                    {{/each}}
                    <a href="/depost/page/{{pages}}">&raquo;</a>
                </div>
                </div>
            </div>
    </div>
</div>
    