<div class="col-lg-9">
    <div class="blog-sec right-pading">
            <div class="blog-sec right-pading">
                <div class="post-filter-sec">
                    <form method="post" class="filter-form" action="">
                        <input type="post" placeholder="Search post">
                        <button><i class="ti-search"></i></button>
                    </form>
                    <div class="container">
                        <form action="/depost/filter" method="post">
                            <div class="form-group">
                                <select style="width: 100%;" name="select">
                                    {{#if select}}<option>{{select}}</option>
                                    {{else}}<option>All Department</option>
                                    {{/if}}

                                    {{#each departlst}}
                                        {{#ifEquals departmentName ../select}}
                                        {{else}}
                                        <option value="{{id}}">{{departmentName}}</option>
                                        {{/ifEquals}}
                                    {{/each}}
                                </select>
                                <button type="submit" class="btn btn-outline-info"><i class="ti-filter"></i></i>
                                    Filter</button>
                            </div>

                        </form>
                    </div>
                    {{#if depost_list}}
                        {{#each depost_list}}
                        <div class="l-post">
                            <figure>
                                <img src="/images/bloglist-1.jpg" alt="">
                            </figure>
                            <div class="l-post-meta">
                                <h4><a href="/detail/{{id}}" title="">{{{title}}}</a></h4>
                                <div class="l-post-ranking">
                                    <a class="admin" href="/depost/filter/{{department}}/1" title="">{{departmentName}}</a>
                                    <a class="pdate" href="#" title="">{{date}}</a>
                                </div>
                            </div>
                        </div>
                            <div value="{{id}}"></div>
                        {{/each}}
                    {{else}}
                        <p>No post yet</p>
                    {{/if}}

                </div>
                <!-- pagination -->
                {{#if depost_list}}
                    <div class="pagination">
                        <a href="/depost/{{filter}}/1">&laquo;</a>
                        {{#each pagearray}}
                            {{#ifEquals ../current this }}
                                <a href="#" class="active">
                            {{else}}
                                <a href="/depost/{{../filter}}/{{this}}">
                            {{/ifEquals}}
                            {{this}}</a>
                        {{/each}}
                        <a href="/depost/{{filter}}/{{pages}}">&raquo;</a>
                    </div>
                {{/if}}
                </div>
            </div>
    </div>
</div>
    